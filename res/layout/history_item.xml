<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@android:color/white"
    android:padding="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_centerVertical="true"
        android:id="@+id/history_box"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:text="2018.01.15"
            android:id="@+id/history_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="asd76650a"
            android:gravity="center"
            android:id="@+id/history_seller"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/history_box"
        android:background="@drawable/divider"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="2dp"
        android:layout_height="40dp" />

    <TextView
        android:textSize="15dp"
        android:layout_toRightOf="@+id/history_box"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:text="Asdfd as sdfddf aaaaaaaaaaa"
        android:id="@+id/history_title"
        android:layout_width="170dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/history_price"
        android:background="@drawable/divider"
        android:layout_width="2dp"
        android:layout_height="40dp" />

    <TextView
        android:textSize="15dp"
        android:textAlignment="textEnd"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="50000P"
        android:id="@+id/history_price"
        android:layout_width="60dp"
        android:layout_height="wrap_content" />

</RelativeLayout>