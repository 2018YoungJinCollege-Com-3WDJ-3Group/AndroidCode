<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/free_leftBox"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="[카테고리]"
            android:textSize="13dp"
            android:id="@+id/free_board_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="제에에에에모오오오옥"
            android:id="@+id/free_board_title"
            android:textSize="20dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="작성자"
                android:id="@+id/free_board_writer"
                android:layout_width="wrap_content"
                android:textSize="13dp"
                android:layout_height="wrap_content" />

            <TextView
                android:text=" | "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="2018.01.01"
                android:id="@+id/free_board_reg_date"
                android:textSize="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text=" | "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="조회수 50"
                android:id="@+id/free_board_hits"
                android:textSize="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>