<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="280dp"
    android:background="@drawable/color_white"
    android:padding="15dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sheet_post_title"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/sheet_post_clear"
            android:src="@drawable/score_post_exit"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="7dp"
        android:src="@drawable/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <ScrollView
            android:padding="10dp"
            android:background="@drawable/post_line_box"
            android:id="@+id/sheet_post_scrollview"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <TextView
                android:textAlignment="center"
                android:text="aaaaaaaaaaa"
                android:textColor="@color/disable"
                android:id="@+id/sheet_post_contents"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </ScrollView>

        <FrameLayout
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/sheet_post_like"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_like_before"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="0"
                android:id="@+id/num_like"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <ImageButton
            android:id="@+id/sheet_post_buy"
            android:src="@drawable/score_board_buy"
           android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="3dp"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/dialog_top"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="root"
            android:textColor="@color/gray"
            android:textSize="13dp"
            android:textAlignment="center"
            android:id="@+id/sheet_post_seller"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            />

        <TextView
            android:textSize="13dp"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   |   " />

        <TextView
            android:textSize="13dp"
            android:textColor="@color/gray"
            android:text="18.01.01"
            android:id="@+id/sheet_post_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:textSize="13dp"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   |   " />

        <TextView
            android:textSize="13dp"
            android:textColor="@color/gray"
            android:text="판매수 50"
            android:id="@+id/sheet_post_sellnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:textSize="13dp"
            android:textColor="@color/gray"
            android:text="   |   "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="13dp"
            android:textColor="@color/gray"
            android:id="@+id/sheet_post_price"
            android:text="500P"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/preview_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:src="@drawable/score_post_preview" />

</LinearLayout>


